@model IEnumerable<WebApplication_ChainStores.Models.Orders_Stores>

@{
    ViewBag.Title = "ReadyOrdersStore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Заказы</h2>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employees.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stores.Street)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employees.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stores.Street)
        </td>
        <td>
            @Html.ActionLink("Детализация", "DetailsOrder", new { id=item.OrderStoreID }, htmlAttributes: new { @class = "btn btn-default active", role = "button" })

        </td>
    </tr>
}

</table>
