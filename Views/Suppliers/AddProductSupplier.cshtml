@model IEnumerable<WebApplication_ChainStores.Models.productNotSupplier_Result>
@{
    ViewBag.Title = "AddProductSupplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить товар, поставляемый</h2>
<h3>@ViewBag.SupplierName</h3>

<div>
    @Html.ActionLink("К списку товаров для поставки", "ProductSupplier", new { id = ViewBag.SupplierID }, htmlAttributes: new { @class = "btn btn-default active", role = "button" })
</div>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchasePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.ActionLink("Добавить", "AddNewProductSelectSupplier", new { id1 = item.ProductID, id2 = ViewBag.SupplierID }, htmlAttributes: new { @class = "btn btn-info active", role = "button" })
            </td>
        </tr>
    }

</table>