
@model IEnumerable<WebApplication_ChainStores.Models.productNotStore_Result>

@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить новый товар</h2>

        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PurchasePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SalePrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Place)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchasePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place)
                    </td>

                    <td>
                        @Html.ActionLink("Добавить", "AddNewProductSelect", new { id1 = item.ProductID, id2 = ViewBag.StoreId}, htmlAttributes: new { @class = "btn btn-info active", role = "button" }) 
                    </td>
                </tr>
            }

        </table>


